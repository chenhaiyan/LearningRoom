<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>newpackage.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Roonifo</servlet-name>
        <servlet-class>newpackage.Roonifo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTest</servlet-name>
        <servlet-class>newpackage.StudentTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormIfo</servlet-name>
        <servlet-class>newpackage.FormIfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyRoom</servlet-name>
        <servlet-class>Room.ModifyRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRoom</servlet-name>
        <servlet-class>Room.AddRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRoom1</servlet-name>
        <servlet-class>Room.AddRoom1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelRoom</servlet-name>
        <servlet-class>Room.DelRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderSelect</servlet-name>
        <servlet-class>Room.OrderSelect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateIfo</servlet-name>
        <servlet-class>Room.UpdateIfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Roonifo</servlet-name>
        <url-pattern>/Roonifo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTest</servlet-name>
        <url-pattern>/StudentTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormIfo</servlet-name>
        <url-pattern>/FormIfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyRoom</servlet-name>
        <url-pattern>/ModifyRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRoom</servlet-name>
        <url-pattern>/AddRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRoom1</servlet-name>
        <url-pattern>/AddRoom1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelRoom</servlet-name>
        <url-pattern>/DelRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderSelect</servlet-name>
        <url-pattern>/OrderSelect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateIfo</servlet-name>
        <url-pattern>/UpdateIfo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/myDatasource</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <resource-ref>
        <description>连接mysql</description>
        <res-ref-name>jdbc/myDatasource_1</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
